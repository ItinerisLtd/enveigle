  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.19.5",
    "@oclif/tslint": "^3",
    "@types/chai": "^4",
    "@types/execa": "^0.9.0",
    "@types/listr": "^0.13.0",
    "@types/mocha": "^5",
    "@types/node": "^10.12.10",
    "ts-node": "^7",
    "tslint": "^5",
    "typescript": "^3.0"
  },
  "engines": {
