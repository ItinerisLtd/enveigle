  "bin": {
    "enveigle": "./bin/run"
  },
  "bugs": {
    "url": "https://github.com/ItinerisLtd/enveigle/issues",
    "email": "hello@itineris.co.uk"
  },
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^2",
    "execa": "^1.0.0",
    "listr": "^0.14.3",
