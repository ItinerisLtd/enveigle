{
  "name": "@itinerisltd/enveigle",
  "description": "Deceive Ansible to template Trellis .env files to local system",
  "version": "0.1.2",
  "author": "Tang Rufus @TangRufus",
  "bin": {
    "enveigle": "./bin/run"
  },
  "bugs": "https://github.com/ItinerisLtd/enveigle/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^2",
    "@oclif/plugin-warn-if-update-available": "^1.5.4",
    "execa": "^1.0.0",
    "listr": "^0.14.3",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/tslint": "^3",
    "@types/chai": "^4",
    "@types/execa": "^0.9.0",
    "@types/listr": "^0.13.0",
    "@types/mocha": "^5",
    "@types/node": "^10.12.10",
    "ts-node": "^7",
    "tslint": "^5",
    "typescript": "^3.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/templates"
  ],
  "homepage": "https://github.com/ItinerisLtd/enveigle",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "bin": "enveigle",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-warn-if-update-available"
    ],
    "warn-if-update-available": {
      "timeoutInDays": 1
    }
  },
  "repository": "ItinerisLtd/enveigle",
  "scripts": {
    "posttest": "tslint -p . -t stylish",
    "prepack": "rm -rf lib && tsc -b",
    "test": "echo NO TESTS"
  },
  "types": "lib/index.d.ts",
  "publishConfig": {
    "access": "public"
  }
}
